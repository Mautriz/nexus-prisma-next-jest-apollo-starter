{
  "name": "next-nexus-todo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "db:start": "docker run --detach --publish 5432:5432 -e POSTGRES_PASSWORD=postgres --name 'next-nexus-todo' postgres",
    "db:stop": "docker stop next-nexus-todo",
    "codegen": "graphql-codegen",
    "db:migrate": "prisma migrate save --experimental && prisma migrate up --experimental",
    "nexus:reflection": "nexus dev --reflection --entrypoint src/pages/api/graphql.ts",
    "nexus:check": "nexus build --entrypoint src/pages/api/graphql.ts",
    "test": "jest",
    "dev": "next dev",
    "start": "next start",
    "build": "nexus build && next build",
    "deploy:preview": "now",
    "deploy:prod": "now --prod"
  },
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "@chakra-ui/core": "^0.8.0",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "apollo-boost": "^0.4.9",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "apollo-link-ws": "^1.0.20",
    "bcryptjs": "^2.4.3",
    "cookies": "^0.8.0",
    "emotion-theming": "^10.0.27",
    "jsonwebtoken": "^8.5.1",
    "next": "^9.5.0",
    "next-auth": "^3.1.0",
    "next-with-apollo": "^5.1.0",
    "nexus": "0.26.1",
    "nexus-plugin-prisma": "0.18.2",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@graphql-codegen/typescript-react-apollo": "^2.0.6",
    "@prisma-labs/prettier-config": "0.1.0",
    "@types/next-auth": "^3.1.4",
    "@types/node": "13.13.10",
    "@types/react": "16.9.34",
    "jest": "^26.4.2",
    "prettier": "2.0.5",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.0"
  },
  "prettier": "@prisma-labs/prettier-config"
}
